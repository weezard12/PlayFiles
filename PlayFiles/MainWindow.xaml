<Window
    x:Class="PlayFiles.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PlayFiles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Play Files"
    Width="800"
    Height="500"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Define styles and resources  -->
        <Style x:Key="RoundCornerButton" TargetType="Button">
            <Setter Property="Background" Value="#4a6fa8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5a80b9" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3a5f98" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#7a8ba1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundCornerCancelButton" TargetType="Button">
            <Setter Property="Background" Value="IndianRed" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkRed" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="IndianRed" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="DarkRed" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundCornerAboutButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource LogoBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="ForestGreen" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource LogoBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="ForestGreen" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CustomCheckBox" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5,0" />
        </Style>

        <Style x:Key="CustomLabel" TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </Window.Resources>

    <Grid Name="MainGrid" Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header with theme toggle  -->
        <Border
            Grid.Row="0"
            Padding="20,10"
            Background="{DynamicResource PanelBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <TextBlock
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{DynamicResource LogoBrush}"
                        Text="Play Files" />

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text=" - Media Player Scheduler" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Dark Mode" />
                    <ToggleButton
                        x:Name="ThemeToggle"
                        Width="50"
                        Height="24"
                        Click="ThemeToggle_Click">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border
                                    x:Name="border"
                                    Background="#cccccc"
                                    BorderThickness="0"
                                    CornerRadius="12">
                                    <Grid>
                                        <Ellipse
                                            x:Name="switchKnob"
                                            Width="18"
                                            Height="18"
                                            Margin="3,0,0,0"
                                            HorizontalAlignment="Left"
                                            Fill="White" />
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#4a6fa8" />
                                        <Setter TargetName="switchKnob" Property="HorizontalAlignment" Value="Right" />
                                        <Setter TargetName="switchKnob" Property="Margin" Value="0,0,3,0" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main content  -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left panel with buttons  -->
            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="15"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="10">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,15"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Add Media" />

                    <Button
                        x:Name="UploadButton"
                        Click="Upload"
                        Style="{StaticResource RoundCornerButton}">
                        <TextBlock Text="Upload Local File" />
                    </Button>

                    <Button
                        x:Name="YTButton"
                        Click="UploadFromYT"
                        Style="{StaticResource RoundCornerButton}">
                        <TextBlock Text="Upload from YouTube" />
                    </Button>

                    <Button
                        x:Name="WEBButton"
                        Click="UploadFromWEB"
                        Style="{StaticResource RoundCornerButton}">
                        <TextBlock Text="Upload Web File" />
                    </Button>
                </StackPanel>
            </Border>

            <!--  Right panel with file list  -->
            <Border
                Grid.Column="1"
                Margin="10,0,0,0"
                Padding="15"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock
                            Margin="0,0,0,5"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource ForegroundBrush}"
                            Text="Scheduled Files" />
                        <TextBlock
                            x:Name="CurrentTime"
                            Margin="0,0,0,10"
                            Foreground="{DynamicResource ForegroundBrush}"
                            Text="Current Time: --:--:--" />
                    </StackPanel>

                    <ScrollViewer
                        Grid.Row="1"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="FilesLoadedPanel" Margin="0,5">
                            <!--  Files will be loaded here  -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!--  Footer with settings  -->
        <Border
            Grid.Row="2"
            Padding="20,10"
            Background="{DynamicResource PanelBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal">
                    <Button
                        x:Name="QuitButton"
                        Width="85"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="Quit_Clicked"
                        Style="{StaticResource RoundCornerCancelButton}">
                        <TextBlock Text="Quit Player" />

                    </Button>
                    <Button
                        Width="95"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="About_Clicked"
                        Style="{StaticResource RoundCornerAboutButton}">
                        <TextBlock Text="About / Help" />

                    </Button>
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">



                    <TextBlock
                        Margin="0,0,20,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Settings" />

                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <CheckBox
                        x:Name="KeepScreenOn"
                        Checked="KeepScreenOn_Checked"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Style="{StaticResource CustomCheckBox}"
                        Unchecked="KeepScreenOn_Unchecked" />
                    <Label
                        Margin="0,0,20,0"
                        Content="Keep Screen On"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Style="{StaticResource CustomLabel}" />

                    <CheckBox
                        x:Name="HideCursor"
                        Click="HideCursor_Click"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Style="{StaticResource CustomCheckBox}" />
                    <Label
                        Content="Hide Cursor When Playing Media"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Style="{StaticResource CustomLabel}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>